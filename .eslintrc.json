{
    "env": { "node": true, "es2021": true },
    "extends": ["standard", "plugin:node/recommended"],
    "parserOptions": { "ecmaVersion": "latest", "sourceType": "module" },
    "rules": {
      "no-unused-vars": "warn",
      "no-console": "off",
      "func-names": "off",
      "no-plusplus": "off",
      "no-process-exit": "off",
      "class-methods-use-this": "off",
      "node/no-unsupported-features/es-syntax": "off"
    }
  }